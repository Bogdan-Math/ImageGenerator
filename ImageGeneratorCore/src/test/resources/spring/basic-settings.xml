<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="basicSettings" class="domain.BasicSettings">
        <property name="incomeImage" ref="image"/>
        <property name="patterns" ref="patterns"/>
        <property name="expectedColumnsCount" value="#{T(domain.Settings).MAX_EXPECTED_COLUMNS_COUNT / 2}"/>
        <property name="imageFileName" value="image-file-name.jpg"/>
    </bean>

    <bean id="image" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="core.InformationalImage"/>
    </bean>

    <bean id="patterns" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="java.util.HashMap"/>
    </bean>

</beans>