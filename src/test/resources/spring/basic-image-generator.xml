<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="basicImageGenerator" class="domain.BasicImageGenerator">
        <property name="settings" ref="basicSettings"/>
    </bean>

    <bean id="basicSettings" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="domain.BasicSettings"/>
    </bean>

    <bean id="resourceReader" class="utility.system.ResourceReader"/>
    <bean id="typeConverter" class="utility.system.ObjectTypeConverter"/>

</beans>